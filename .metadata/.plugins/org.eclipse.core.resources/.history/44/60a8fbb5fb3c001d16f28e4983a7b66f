#ifndef 	USART_CONFIG_H
#define 	USART_CONFIG_H

#define USART_BASEADDRESS  0x40011000
typedef struct
{
	union
	{
		u32 REGISTER;
		struct
		{
			u32 PE:1;
			u32 FE:1;
			u32 NF:1;
			u32 ORE:1;
			u32 IDLE:1;
			u32 RXNE:1;
			u32 TC:1;
			u32 TXE:1;
			u32 LBD:1;
			u32 CTC:1;
		}BIT;
	}SR;
	u32 DR;
	union
	{
		u32 REGISTER;
		struct
		{
			u32 DIVFraction:4;
			u32 Mantissa:12;
		}BIT;
	}BRR;
	union
	{
		u32 REGISTER;
		struct
		{
			u32 SBK		:1;
			u32 RWU		:1;
			u32	RE		:1;
			u32	TE		:1;
			u32	IDLEIE	:1;
			u32	RXNEIE	:1;
			u32	TCIE 	:1;
			u32	TXEIE	:1;
			u32	PEIE 	:1;
			u32	PS   	:1;
			u32	PCE  	:1;
			u32	WAKE  	:1;
			u32	M  		:1;
			u32	UE  	:1;
			u32	  		:1;
			u32	OVER8  	:1;
		}BIT;
	}CR1;
}SPI_t;



#endif
